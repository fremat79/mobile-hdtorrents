<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HdTorrents"
             xmlns:view="clr-namespace:HdTorrents.ViewModel"
             xmlns:converter="clr-namespace:HdTorrents.Converter"
             xmlns:helper="clr-namespace:HdTorrents.Types.Helpers;assembly=HdTorrents.Types"
            x:Class="HdTorrents.App">
    <Application.Resources>
        <ResourceDictionary>
            <view:MyConverter x:Key="loginParameterConverter"/>
            <converter:CurrentPageFontAttributeConverter x:Key="CurrentPageFontAttributeConverter"/>
            <converter:CurrentPageFontColor x:Key="CurrentPageTextColorConverter"/>
            <converter:PageBackgroundConverter x:Key="PageBackgroundConverter"/>
            <converter:SpanLayoutConverter x:Key="SpanLayoutConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
